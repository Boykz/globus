@model EntGlobus.Models.QR.QrNuska

@{
    ViewData["Title"] = "AddNuska";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Нұсқа қосу</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNuska">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NuskaNumber" class="control-label"></label>
                <input asp-for="NuskaNumber" class="form-control" />
                <span asp-validation-for="NuskaNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="QrBookId" class="control-label"></label>
                <input asp-for="QrBookId" class="form-control" />
                <span asp-validation-for="QrBookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

