<div class="wrapper wrapper-login">
    <div class="container container-login animated fadeIn">
        <h3 class="text-center">Жүйеге тіркелу</h3>
        <p class="text-center" style="color:red;">@ViewBag.Result</p>
        <form class="login-form" asp-action="NewRegister" asp-controller="Home">
            <div class="form-group">
                <label for="username" class="placeholder"><b>Аты-жөні</b></label>
                <input id="username" name="Name" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="username" class="placeholder"><b>Номер</b></label>
                <input id="username" name="Number" type="number" class="form-control" required>
